<script>
    function deleteOrderById(id) {
        return fetch(`/orders/${id}`, {
            method: 'DELETE'
        }).then(response => location.reload())
    }

    function updateOrderById(id) {
        return fetch(`/orders/${id}`, {
            method: 'DELETE'
        }).then(response => location.reload())
    }
</script>
