<!DOCTYPE html>
<html>

<head>
    <title>List of operators</title>
    <meta charset="utf-8" />
</head>

<body>
    <a href="/operators/addOperator">Add Operator</a>
    </br>
    <h1>List of operators</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phonenumber</th>
        </tr>
        {{#each operators}}
        <tr>
            <td>{{this.idoperator}}</td>
            <td>{{this.name}}</td>
            <td>{{this.phonenumber}}</td>
            <td><a href="/operators/{{this.idoperator}}">Details</a></td>
            <td><a href="/operators/updateOperator/{{this.idoperator}}">Update</a></td>
            <td><input type="button" onclick="deleteOperatorById({{this.idoperator}})" value="Delete" /> </td>
        </tr>
        {{/each}}
    </table>
    <a href="/countries">GO TO LIST OF COUNTRIES</a>
    </br>
    <a href="/tours">GO TO LIST OF TOURS</a>
    </br>
    <a href="/vouchers">GO TO LIST OF VOUCHERS</a>
    </br>
    <a href="/orders">GO TO LIST OF ORDERS</a>
    </br>
</body>

<script>
    function deleteOperatorById(id) {
        return fetch(`/operators/${id}`, {
            method: 'DELETE'
        }).then(response => location.reload())
    }
</script>
<html>